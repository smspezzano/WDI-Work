<div>
<h3>Categories</h3>
<ul>
  <% @categories.each do |c| %>
    <li>
      <%= link_to c.name.capitalize, category_path(c) %>
    </li>
  <% end %>
</ul>
<%= button_to "Create a new category", new_category_path, method: "get", class: "btn btn-primary"%>

<%= button_to "Home", root_path, method: 'get', class: "btn btn-primary" %>
</div>